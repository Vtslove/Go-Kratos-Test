load("@io_bazel_rules_go//go:def.bzl", "go_library")
load("@io_bazel_rules_go//proto:def.bzl", "go_proto_library")
load("@rules_proto//proto:defs.bzl", "proto_library")
load("@rules_buf//buf:defs.bzl", "buf_lint_test")

proto_library(
    name = "wrapperspb_proto",
    srcs = [
        "any.proto",
        "api.proto",
        "descriptor.proto",
        "duration.proto",
        "empty.proto",
        "field_mask.proto",
        "source_context.proto",
        "struct.proto",
        "timestamp.proto",
        "type.proto",
        "wrappers.proto",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "@com_google_protobuf//:any_proto",
        "@com_google_protobuf//:source_context_proto",
        "@com_google_protobuf//:type_proto",
    ],
)

buf_lint_test(
    name = "wrapperspb_proto_lint",
    config = "//third_party:buf.yaml",
    targets = [":wrapperspb_proto"],
)

go_proto_library(
    name = "wrapperspb_go_proto",
    importpath = "google.golang.org/protobuf/types/known/wrapperspb",
    proto = ":wrapperspb_proto",
    visibility = ["//visibility:public"],
)

go_library(
    name = "wrapperspb",
    embed = [":wrapperspb_go_proto"],
    importpath = "google.golang.org/protobuf/types/known/wrapperspb",
    visibility = ["//visibility:public"],
)

alias(
    name = "go_default_library",
    actual = ":wrapperspb",
    visibility = ["//visibility:public"],
)
